<script>
let count = 0;

function goToQuestion(){
    document.getElementById("screen1").style.display="none";
    document.getElementById("screen2").style.display="block";
}

function growYes(){
    if(count < 4){
        let yesBtn = document.getElementById("yes");
        let noBtn = document.getElementById("no");

        yesBtn.style.transform = `scale(${1 + (count+1)*0.4})`;
        noBtn.style.transform = `scale(${1 - (count+1)*0.2})`;

        count++;
    }
}

/* When YES is pressed */
function startExperience(){
    // Start music
    document.getElementById("musicPlayer").src =
    "https://www.youtube.com/embed/9F3w7lN4WwA?autoplay=1&loop=1&playlist=9F3w7lN4WwA";

    // Show first letter page
    document.getElementById("screen2").style.display="none";
    document.getElementById("letter1").style.display="block";
}

function showLetterPage2(){
    document.getElementById("letter1").style.display="none";
    document.getElementById("letter2").style.display="block";
}

/* Floating hearts generator */
setInterval(()=>{
    const heart=document.createElement("div");
    heart.className="heart";
    heart.innerHTML="ðŸ’–";
    heart.style.left=Math.random()*100+"vw";
    heart.style.fontSize=(20+Math.random()*20)+"px";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),6000);
},500);
</script>